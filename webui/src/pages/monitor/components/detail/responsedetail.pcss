.response {
  border-left: 1px solid #ccc;
  .response__header {
    height: 28px;
    line-height: 28px;
    text-align: center;
    display: flex;
    justify-content: center;
    font-size: 14px;
    font-weight: bolder;
    .response__tab {
      flex-grow: 1;
      box-sizing: border-box;
      border-right: 1px solid #ccc;
      border-bottom: 1px solid #ccc;
      cursor: pointer;
      &:last-child {
        border-right: none;
      }
      &.active {
        background-color: #e6e6e6;
      }
    }
  }
  .response__body {
    height: calc(100% - 28px);
    overflow-y: scroll;
  }
  .set-cookies {
    line-height: 1.5;

  }
  .cookie-row {
    font-size: 14px;
    border-bottom: 1px solid #ccc;
  }
}